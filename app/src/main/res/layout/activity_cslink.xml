<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85929E"
    tools:context=".CSLinkActivity">

    <TextView
        android:id="@+id/CSLinkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dito's Cloud Server Links "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#283747"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CSLinkDetails"
        android:textColor="#212F3D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:text="Here's the link for access the outcome from configuration on Dito's Cloud Server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CSLinkTitle" />

    <Button
        android:id="@+id/LinkGrayLogButton"
        android:text="Graylog - Log Centralization"
        android:onClick="toGrayLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/CSLinkDetails"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/LinkPySparkButton"
        android:text="PySpark - BigData Management"
        android:onClick="toPySpark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/LinkGrayLogButton"
        android:layout_marginTop="5dp" />



</androidx.constraintlayout.widget.ConstraintLayout>